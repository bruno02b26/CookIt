{% extends 'layouts/base_init.html.twig' %}

{% block title %}Sign up{% endblock %}

{% block main %}
    <div class="container" style="display: flex; justify-content: center; align-items: center; height: 46vh; margin-top: 12vh;">
        <article style="margin-top: 35vh; width: calc(10vw + 300px); background-color: rgba(245, 186, 65, 0.1); flex-direction: column; height: 80vh; display: flex; justify-content: space-evenly; align-items: center; border-radius: 20px; border: 4px #F5BA41 solid; text-align: center;">
            <div style="width: calc(100% - 20px); height: 9vh; ">
                <img src="{{ asset('images/main/security/email.png') }}" class="figure-img img-fluid rounded m-2 me-3" style="padding-bottom: 12px;">
                <span class="sm-screen" style="font-size: 36px; user-select: none">Sign up with Email</span>
            </div>

            <form action="{{ path('app_register_email') }}" id="registerForm" method="POST" style="display: flex; flex-direction: column; justify-content: center; align-items: center;">
                <label for="email" class="form-label" style="font-size: 1.2rem;">Email</label>
                <input type="email" id="email" name="email" class="form-control register" maxlength="255" required>

                <label for="name" class="form-label" style="font-size: 1.2rem;">Name</label>
                <input type="text" id="name" name="name" class="form-control register" maxlength="25" required>

                <label for="surname" class="form-label" style="font-size: 1.2rem;">Surname</label>
                <input type="text" id="surname" name="surname" class="form-control register" maxlength="50" required>

                <label for="password" class="form-label" style="font-size: 1.2rem;">Password</label>
                <input type="password" id="password" name="password" class="form-control register" minlength="8" maxlength="20" required>

                <label for="confirm_password" class="form-label" style="font-size: 1.2rem;">ConfirmPassword</label>
                <input type="password" id="confirm_password" name="confirm_password" class="form-control register" minlength="8" maxlength="20" required>

                <div id="password_constraint" class="form-text mx-2" style="font-size: 0.8rem; ">
                    Your password must be 8-20 characters long.
                </div>

                <div id="error" style="color: red; margin-top: 10px; font-size: 1rem; visibility: hidden;"></div>
                <button type="submit" class="form-label submit mb-2 sm-screen" id="submitBtn" style="margin-top: 1.8rem; width: calc((10vw + 180px)/2); background-color: rgba(245,186,65,.8); height: 5vh; border: 2px #F5BA41 solid; border-radius: 10px; display: flex; justify-content: center; align-items: center; font-size: 1.2rem;">Submit</button>
            </form>
        </article>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/scripts/js/register.js') }}"></script>
{% endblock %}