<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon" href="{{ asset('images/logo.ico') }}" type="image/x-icon">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans&display=swap" rel="stylesheet">
    <link rel="stylesheet" href={{ asset('assets/vendor/bootstrap/dist/css/bootstrap.min-1712f0378f8675ca7cd423d6262fcccf.css') }}>
    <link rel="stylesheet" href={{ asset('assets/styles/app-3aaf7faeed14cf0b3ef95d57b6c53733.css')}}
    {% block stylesheets %}
    {% endblock %}
    </head>
<body>
<header style="display: flex; height: 10vh; align-content: center; justify-content: space-between; position:fixed; top: 0; width: 100%; z-index: 100;" class="bg-primary">
    <div style="display: flex; justify-items: flex-start;">
        <img src="{{ asset('images/header/main-logo.svg') }}" style="height: 100%;">
    </div>
    {% block search %}
    {% endblock %}
    <div style="display: flex; align-items: center; margin-left: -60vw;">
        {% block corner %}
            <a class="nav-item" href="/user">
                <img src="{{ asset('images/header/user.svg') }}" style="height: 65%; color: white; margin-right: 2.15vw; margin-left: -0.5vw;">
            </a>
            <a class="nav-item" href="/logout">
                <img src="{{ asset('images/header/logout.svg') }}" style="height: 65%; color: white; margin-right: 3.5vw;">
            </a>
        {% endblock %}
    </div>
</header>
<main>
    <nav style="width: 10vw; background-color: #F5BA41; flex-direction: column; height: 90vh; display: flex; justify-content: space-evenly; align-items: center; float: left; position: fixed; bottom: 0;">
        {% block nav %}
            <a class="nav-item" href="/recipes">
                <img src="{{ asset('images/nav/recipe.svg') }}" class="img-fluid" style="height: 100%;">
            </a>
            <a class="nav-item" href="/lists">
                <img src="{{ asset('images/nav/list.svg') }}" class="img-fluid" style="height: 80%;">
            </a>
            <a class="nav-item" href="/cooking">
                <img src="{{ asset('images/nav/cooking.svg') }}" class="img-fluid" style="height: 80%;">
            </a>
            <a class="nav-item" href="/stats">
                <img src="{{ asset('images/nav/stats.svg') }}" class="img-fluid" style="height: 80%;">
            </a>
            <a class="nav-item" href="/contact">
                <img src="{{ asset('images/nav/contact.svg') }}" class="img-fluid" style="height: 100%;">
            </a>
            <a class="nav-item" href="/about">
                <img src="{{ asset('images/nav/about.svg') }}" class="img-fluid" style="height: 80%;">
            </a>
        {% endblock %}
    </nav>
    {% block centre %}
    {% endblock %}

</main>
{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    {% block importmap %}{{ importmap('app') }}{% endblock %}
{% endblock %}
</body>
</html>